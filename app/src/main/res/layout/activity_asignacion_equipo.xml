<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="ASIGNACION/CAMBIO DE MÁQUINA"
        android:textStyle="bold"
        android:background="@color/colorTitulo2"
        android:textSize="17dp"
        android:textColor="@color/colorWhite"
        android:paddingLeft="10dp"
        android:gravity="left|center"/>

    <TextView
        android:id="@+id/txvTituloPaciente"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="txtTituloTurno"
        android:background="@color/colorTitulo"
        android:textSize="17dp"
        android:textColor="@color/colorToolbar"
        android:gravity="center"/>

    <ProgressBar
        android:id="@+id/loadingLogin"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="clip_vertical">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Seleccione la maquina que va a utilizar el paciente:"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEquipos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:textSize="17dp"
            android:text="Seleccione equipo"
            android:textColor="@color/colorWhite"
            android:background="@drawable/estilo_combo"
            android:drawableRight="@mipmap/ic_keyboard_arrow_down_white_36dp"
            android:layout_marginTop="5dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ASIGNAR"
            android:textColor="@color/colorText"
            android:id="@+id/btnAsignarEquipo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:textSize="17dp"
            android:background="#E84E40"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>