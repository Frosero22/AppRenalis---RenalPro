<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:layout_margin="0dp"
    android:elevation="0dp"
    android:padding="0dp"
    android:background="@color/colorToolbar"
    android:fitsSystemWindows="true"
    app:title="">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagenveris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_fin_2" />


            <ImageButton
                android:id="@+id/imgButSalir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/ic_exit_to_app_white_36dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp" />

            <TextView
                android:id="@+id/txvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/imagenveris"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="ERIK NEVAREZ" />

            <ImageButton
                android:id="@+id/imgButReporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_toStartOf="@+id/imgButSalir"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/ic_assignment_white_36dp"
                android:layout_alignBottom="@+id/imagenveris" />

        </RelativeLayout>

</androidx.appcompat.widget.Toolbar>